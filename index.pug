doctype html
html
    head
        title Ocean's website
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="index.css")
        link(rel="icon" href="icon.gif")
        
    body
        div.container-fluid#content
            section#homeSection(data-color="#42ff8e"): include home

            mixin homeButton
                a.section-link(href="#") Home

            section#aboutSection(data-color="#106b3f" data-dark="true")
                include about
                +homeButton

            section#projectsSection(data-color="#ff70c8")
                include projects
                +homeButton

            include projectList
            each project in projects
                section(id=`${project.name}Section` data-color=project.color data-dark=String(project.dark))
                    h1.project-title: a(href=project.link)
                        img(src=project.logoURL)
                        span= project.title
                    hr
                    p= project.description
                    hr
                    a.section-link(href="#projects") Back to Projects

            section#moneySection(data-color="#ffe600")
                h1 Ocean's net worth
                p £100
                +homeButton

            section#moneyrealSection(data-color="#ffb300")
                h1 Ocean's net worth (real)
                p £200
                +homeButton

            section#emailSection(data-color="#c2f7ff")
                h5 You can email me at:
                -
                    let email = 'ocean@ocean.lol';
                h2: a(href=`mailto:${email}`)= email
                +homeButton
        
        //-script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js")
        script(src="index.js")